<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dÃ­a: "
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_foreign"
            android:layout_below="@id/tv_national"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extranjeros: "
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_national"
            android:layout_below="@id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nacionales: "
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_exonerated"
            android:layout_below="@id/tv_foreign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="exonerados: "
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_validar"
            android:layout_below="@id/tv_exonerated"
            android:layout_width="250dp"
            android:layout_marginTop="20dp"
            android:background="@color/teal"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Validar"
            android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>